<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-start">
                Category List
            </h2>
        </div>

        <div class="col text-end">
            <a  asp-page="categories/create"  class="btn btn-primary">
                <i class="bi bi-database-add">Create New Category</i>
            </a>
        </div>
    </div>
    <!--<h1>Category</h1>-->

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.RazorCategories_List)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Categories/Edit"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square">Edit</i>
                        </a>
                            <a asp-page="Categories/Delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill">Delete</i>
                         </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
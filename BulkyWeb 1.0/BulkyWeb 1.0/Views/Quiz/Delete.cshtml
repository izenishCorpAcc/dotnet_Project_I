            @*<span asp-validation-for="WrongAnswer_3" class="text-bg-danger"></span>*@

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control w-100">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Quiz" asp-action="Index" class="btn btn-secondary border form-control w-100">Back to List</a>
            </div>
        </div>



    </div>
</form>

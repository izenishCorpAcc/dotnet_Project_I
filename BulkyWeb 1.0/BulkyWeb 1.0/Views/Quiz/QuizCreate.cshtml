@model Prasna



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add More Questions:</h2>
            <hr />
        </div>


        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3 mt-3 row" >
            <label asp-for="Question" style=" font-size: 30px;"> </label>
            <input asp-for="Question" class="form-control" style="min-height:80px"/>
            <span asp-validation-for="Question" class="text-bg-danger"></span>

        </div>
        <div class="mb-3 mt-3 row">
            <label asp-for="Correct_Answer" style="color:greenyellow; font-size: 25px;"></label>
            <input asp-for="Correct_Answer" class="form-control" />
            <span asp-validation-for="Correct_Answer" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="WrongAnswer_1" style="color:red; font-size: 25px;"></label>
            <input asp-for="WrongAnswer_1" class="form-control" />
            <span asp-validation-for="WrongAnswer_1" class="text-bg-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="WrongAnswer_2" style="color:red; font-size: 25px;"></label>
            <input asp-for="WrongAnswer_2" class="form-control" />
            <span asp-validation-for="WrongAnswer_2" class="text-bg-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="WrongAnswer_3" style="color:red; font-size: 25px;"></label>
            <input asp-for="WrongAnswer_3" class="form-control" />
            <span asp-validation-for="WrongAnswer_3" class="text-bg-danger"></span>

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control w-100">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Quiz" asp-action="Index" class="btn btn-secondary border form-control w-100">Back to List</a>
            </div>
        </div>



    </div>
</form> 


<!--Sever Side Validation-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
@model Category



<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit CATEGORY</h2>
            <hr />
        </div>


        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3 row">
            <label asp-for="Name"> </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-bg-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control w-100">UPDATE</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control w-100">Back to List</a>
            </div>
        </div>

    </div>
</form>

<!--Sever Side Validation-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}